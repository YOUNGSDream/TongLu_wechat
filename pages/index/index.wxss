/**index.wxss**/
page{

  background: #f1f1f1;

}
.yuanhu{
  width: 100%;
  height: 120rpx;
  /* background: red; */
  z-index: -1;
  position: absolute;
}
.yuanhu image{
  width: 100%;
  height: 100%;
}
.spiltLine{
  width:100%;
  height:20rpx;
  background: #EEEEEE;
  position: absolute;
  bottom: 0;
}
.beginButton{
   width: 180rpx;
  height:180rpx;
  margin: 0 auto;
  position: relative;
  top: -270rpx;
  left:50%;
  transform: translateX(-90rpx) 
}
.decoration{
  width:100%;
  height:64rpx;
  background:white;
}
.decorationText{
  width: 90%;
  height: 100%;
  margin:0 auto;
  margin-top: 10rpx;
  border-top: 2rpx dashed rgb(172, 172, 172);
  font-size:26rpx;
  color:#797474b3;
  /* text-indent: 20rpx; */
  letter-spacing: 5rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding-top: 10rpx;
}
text{
  font-size: 30rpx;
}
.container{
   width:100%;
   height:100%;
}
.videoContianer{
   width:90%;
   border-radius: 10rpx;
   position: relative;
   overflow: hidden;
   background: white;
   margin-bottom: 20rpx;
   
}
.videoPlayer{
  width: 97%;
  border-radius: 12rpx;
  overflow: hidden;
  margin: 0 auto;
  height: 360rpx;
}
.start{
  width: 100%;
  height:100%;
}
.coverImage{
  width: 100%;
  height:100%;
}
.videoControl{
  width:100%;
  height:60rpx;
  background:white;
  /* margin-bottom:10rpx; */
  display: flex;
  justify-content: space-between;
   overflow: hidden;
}
.videoShare{
  padding-top: 10rpx;
  width: 100%;
  height: 160rpx;
  display: flex;
  justify-content: space-around;
}
.videoLeft{
  width: 70%;
  height: 100%;
  display: flex;
  align-items:center;
  padding-left: 10rpx;
}
.videoRight{
   width:30%;
  height: 100%;
  display: flex;
  align-items:center;
  flex-wrap: nowrap;
  justify-content: flex-end;
  padding-right:10rpx;
}
.videoLeft image{
  width:45rpx;
  height:45rpx;
}
.videoLeft text{
  text-decoration: none;
  font-size: 30rpx;
  color:#7F7F81; 
}
.videoRight image{
  width:45rpx;
  height:45rpx;
  margin-left: 10rpx;
  margin-right:5rpx;
}
.videoRight text{
  font-size: 30rpx;
}
.videoRight .shareText{
  margin-right:10rpx;
  font-size: 30rpx;
}
.coverText{
  display: block;
  position: absolute;
  white-space: pre-line;
  width: 100%;
  color: white;
  font-size: 30rpx;
  padding-left: 30rpx;
  padding-top: 23rpx;
  box-sizing: border-box;
  word-break: break-all;
  letter-spacing:2rpx;
}
button::after{
  border:0;
}
button{
  padding:0;
  margin: 0;
  background: white;
  top:11rpx;

}
.videoRight{
  overflow: hidden;
}
.shareButton{
  width:100rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start
}
.shareButton button,.shareButton image{
  width: 75%;
  height: 75rpx;
   border-radius:50%;
  
}
.shareButton button image{
   width: 100%;
  height: 100%;
}
.shareButton button{
  border-radius:50%;
}
.shareButton .text1{
  margin-top: 3rpx;
  font-size: 25rpx;
}
.shareButton .text2{
  font-size: 24rpx;
  color: gray;
}
.shareButton .text3{
   font-size: 25rpx;
  margin-top: 25rpx;
}